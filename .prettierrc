{
    "plugins": ["@ianvs/prettier-plugin-sort-imports", "prettier-plugin-tailwindcss"],
    "bracketSpacing": true,
    "bracketSameLine": true,
    "singleQuote": true,
    "trailingComma": "all",
    "tabWidth": 4,
    "printWidth": 144,
    "semi": true,
    "tailwindFunctions": ["cva", "cn"],
    "importOrder": [
        "<BUILTIN_MODULES>",
        "<TYPES>",
        "<TYPES>^[.]",
        "^(react/(.*)$)|^(react$)",
        "^(next/(.*)$)|^(next$)",
        "^(astro/(.*)$)|^(astro:$)",
        "<THIRD_PARTY_MODULES>",
        "^types$",
        "^@/types/(.*)$",
        "^@/config/(.*)$",
        "^@lib/(.*)$",
        "^@/hooks/(.*)$",
        "^@/components/ui/(.*)$",
        "^@/components/(.*)$",
        "^(?!.*[.]css$)[./].*$",
        ".css$",
        "^[.]"
    ]
}
